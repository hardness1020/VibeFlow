{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          { "type": "command", "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/.claude/hooks/workflow-state-inject.py\"", "timeout": 5 },
          { "type": "command", "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/.claude/hooks/workitem-branch-guard.py\"", "timeout": 5 },
          { "type": "command", "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/.claude/hooks/checkpoint-gate.py\"", "timeout": 15 }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          { "type": "command", "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/.claude/hooks/git-push-guard.py\"", "timeout": 5 }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          { "type": "command", "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/.claude/hooks/auto-validate.py\"", "timeout": 15 },
          { "type": "command", "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/.claude/hooks/doc-path-tracker.py\"", "timeout": 10 },
          { "type": "command", "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/.claude/hooks/stage-transition-update.py\"", "timeout": 5 }
        ]
      }
    ]
  }
}
